        public static Task<T> UpsertAsync<T>(this LiteDatabase database, T document)
        {
            return Task.Run(() =>
            {
                database
                    .GetCollectionByType<T>()
                    .Upsert(document);
                return document;
            });
        }

        public static Task<List<T>> GetAllAsync<T>(this LiteDatabase database)
        {
            return Task.Run(() =>
                database
                    .GetCollectionByType<T>()
                    .FindAll()
                    .ToList()
            );
        }
    }
