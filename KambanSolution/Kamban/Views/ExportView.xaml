<UserControl x:Class="Kamban.Views.ExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Kamban.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Vertical" Margin="20">
            <TextBlock>Select source</TextBlock>
            <ComboBox ItemsSource="{Binding AvailableFiles}" SelectedItem="{Binding SelectedFile}"/>

            <Separator Margin="0, 10, 0, 10"/>
            
            <TextBlock>Select boards to export</TextBlock>
            <ListBox ItemsSource="{Binding Boards}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Path=Board.Name}"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Separator Margin="0, 10, 0, 10"/>

            <TextBlock>Formats to export</TextBlock>
            <CheckBox IsChecked="{Binding ExportJson}" Content="Json"/>
            <CheckBox IsEnabled="False" IsChecked="{Binding ExportXml}" Content="Xml"/>
            <CheckBox IsChecked="{Binding ExportKamban}" Content="Kamban"/>
            <CheckBox IsEnabled="False" IsChecked="{Binding ExportXls}" Content="Xls"/>
            <CheckBox IsEnabled="False" IsChecked="{Binding ExportPdf}" Content="Pdf"/>

            <Separator Margin="0, 10, 0, 10"/>
            
            <TextBlock>Additional options</TextBlock>
            <CheckBox IsChecked="{Binding DatePostfix}" Content="DatePostfix"/>
            <CheckBox IsChecked="{Binding SplitBoardsToFiles}" Content="SplitBoardsToFiles"/>

            <Separator Margin="0, 10, 0, 10"/>
            
            <TextBlock>Target file prefix</TextBlock>
            <TextBox Text="{Binding TargetFile}"/>

            <Separator Margin="0, 10, 0, 10"/>

            <TextBlock>Target folder</TextBlock>
            <TextBlock Text="{Binding TargetFolder}"/>
            <Button Command="{Binding SelectTargetFolderCommand}">Select target folder</Button>

            <Separator Margin="0, 10, 0, 10"/>
            
            <StackPanel Orientation="Horizontal">
                <Button Command="{Binding ExportCommand}">Export</Button>
                <Button Command="{Binding CancelCommand}">Cancel</Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
